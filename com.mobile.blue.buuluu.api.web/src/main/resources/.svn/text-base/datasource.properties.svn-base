# datasource configuration
jdbc.driverClass=com.mysql.jdbc.Driver
jdbc.url=${datasource.url}
jdbc.username=${datasource.username}
jdbc.password=${datasource.password}

datasource.minPoolSize=${datasource.minPoolSize}
datasource.maxPoolSize=${datasource.maxPoolSize}
datasource.checkoutTimeout=20000
datasource.max_statement=0
datasource.idle_test_period=20000
datasource.acquireIncrement=${datasource.acquireIncrement}
#this maxidletime reference etc/my.cnf 
datasource.maxIdleTime=866400
#not use
datasource.testConnectionOnCheckout=true
datasource.acquireRetryAttempts=10
datasource.acquireRetryDelay=5000
datasource.breakAfterAcquireFailure=true
datasource.idleConnectionTestPeriod=5
datasource.partitionCount=1
datasource.acquireIncrement=10                           
datasource.statementsCacheSize=50
datasource.releaseHelperThreads=3

# hibernate configuration
hibernate.archive.autodetection=false
transaction.flush_before_completion=true
hibernate.bytecode.use_reflection_optimizer=true
hibernate.max_fetch_depth=3
hibernate.show_sql=false
hibernate.format_sql=false
hibernate.generate_statistics=false
hibernate.use_sql_comments=true
hibernate.dialect=org.hibernate.dialect.MySQL5Dialect
hibernate.hbm2ddl.auto.create=create
hibernate.hbm2ddl.auto.inserte=inserte
hibernate.cache.use_second_level_cache=false
hibernate.cache.use_query_cache=false
hibernate.connection.autocommit=false
hibernate.current_session_context_class=thread
